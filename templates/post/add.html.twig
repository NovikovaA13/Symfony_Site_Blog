{% extends 'base.html.twig' %}

{% block title %}Ajout d'un article{% endblock %}

{% block body %}

    <h1 class="mt-3 mb-5 text-center">Ajout d'un article</h1>
    <div>
        {{ form_start(form) }}
        {{ form_errors(form, {'attr': {'label': '', 'class': 'alert alert-danger'}}) }}
        {{ form_row(form.title) }}
        {{ form_row(form.body, {
                'attr': {
                    'rows': '10',
                    'cols': '10'
                }
            })
        }}
        <button type="submit" class="btn btn-success">Ajouter</button>
        {{ form_end(form) }}
    </div>
    <div>

    </div>

{% endblock %}
