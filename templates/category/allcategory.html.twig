{% extends 'base.html.twig' %}

{% block title %}Tous les catégories{% endblock %}

{% block body %}

<div class="container">
    <div class="page-header text-center mt-3 mb-4"><h1>Tous les catégories</h1></div>
    <div class="list-group mb-4">
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
        {% for category in categories %}
                <tr class="">
                    <td >{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td><a href="{{ path('category_delete', {'id': category.id }) }}" class="link-danger">Supprimer</a></td>
                </tr>
        {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
